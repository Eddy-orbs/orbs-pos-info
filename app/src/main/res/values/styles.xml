<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="OrbsTheme" parent="AppTheme">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/orbsColorPrimary</item>
        <item name="colorPrimaryDark">@color/orbsColorPrimaryDark</item>
        <item name="colorAccent">@color/orbsColorAccent</item>
    </style>

    <style name="TextBasic">
        <item name="android:fontFamily">@font/montserrat_light</item>
        <item name="android:textColor">@color/textColor</item>
    </style>

    <style name="ButtonTheme" parent="@style/Widget.AppCompat.Button.Colored">
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textSize">@dimen/basic_text_size</item>
        <item name="android:textColor">@color/buttonText</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ButtonTheme2" parent="@style/Widget.AppCompat.Button.Colored">
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textSize">@dimen/alert_message_size</item>
        <item name="android:textColor">@color/buttonText</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:fontFamily">@font/montserrat</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:textColor">@color/textColor</item>
        <item name="android:textSize">@dimen/drawer_menu_size</item>
    </style>

    <style name="NavigationView" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/montserrat</item>
    </style>
</resources>