<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- button disabled -->
    <!-- Disable background -->
    <item
        android:state_enabled="false">
        <shape
            android:innerRadiusRatio="1"
            android:shape="rectangle" >
            <solid android:color="#909090"/>
            <corners android:radius="@dimen/button_round" />
            <padding
                android:bottom="@dimen/button_padding"
                android:left="@dimen/button_padding"
                android:right="@dimen/button_padding"
                android:top="@dimen/button_padding" />
        </shape>
    </item>

    <!-- default -->
    <item
        android:state_enabled="true"
        android:state_pressed="false"
        android:state_focused="false">
        <shape
            android:innerRadiusRatio="1"
            android:shape="rectangle" >
            <solid android:color="@color/button" />
            <corners android:radius="@dimen/button_round" />
            <padding
                android:bottom="@dimen/button_padding"
                android:left="@dimen/button_padding"
                android:right="@dimen/button_padding"
                android:top="@dimen/button_padding" />

        </shape>
    </item>

    <!-- button focused -->
    <item
        android:state_enabled="true"
        android:state_pressed="false"
        android:state_focused="true">
        <shape
            android:innerRadiusRatio="1"
            android:shape="rectangle" >
            <solid android:color="@color/button" />
            <corners android:radius="@dimen/button_round" />
            <padding
                android:bottom="@dimen/button_padding"
                android:left="@dimen/button_padding"
                android:right="@dimen/button_padding"
                android:top="@dimen/button_padding" />
        </shape></item>

    <!-- button pressed -->
    <item
        android:state_enabled="true"
        android:state_pressed="true"
        android:state_focused="false">
        <shape
            android:innerRadiusRatio="1"
            android:shape="rectangle" >
            <solid android:color="@color/buttonSelect"/>
            <corners android:radius="@dimen/button_round" />
            <padding
                android:bottom="@dimen/button_padding"
                android:left="@dimen/button_padding"
                android:right="@dimen/button_padding"
                android:top="@dimen/button_padding" />
        </shape>
    </item>

</selector>