<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingStart="10dp"
    android:paddingEnd="10dp">



        <!-- Title -->
        <LinearLayout
            android:id="@+id/row_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:clickable="false"
            android:gravity="center_vertical"
            android:background="@drawable/button_custom"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="20dp"
                android:layout_height="20dp"
                app:srcCompat="@android:drawable/ic_media_play" />

            <TextView
                android:id="@+id/text_title_address"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="5dp"
                android:fontFamily="@font/montserrat"
                android:gravity="top"
                android:textColor="@color/buttonText"
                android:text="0x123456789abcdef"
                android:clickable="false"
                android:ellipsize="middle"
                android:textSize="@dimen/list_text" />
        </LinearLayout>


        <!-- Contents -->
        <LinearLayout
            android:id="@+id/row_contents"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="0dp"
            android:minHeight="@dimen/listTable_row_height"
            android:orientation="vertical"
            android:background="@drawable/bg_round_rect"
            android:visibility="gone">

            <TableLayout
                android:id="@+id/guardian_table"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="15dp">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="@dimen/listTable_row_height">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="5dp"
                        android:fontFamily="@font/montserrat"
                        android:gravity="center_vertical"
                        android:text="Time(#)"
                        android:textColor="@color/textColor"
                        android:textSize="@dimen/table_col_title"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="10dp"
                        android:layout_height="match_parent" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/text_time"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/montserrat_light"
                            android:gravity="center_vertical"
                            android:minHeight="@dimen/listTable_row_height"
                            android:text="2021-03-17 (Block# 123456)"
                            android:textColor="@color/textColor"
                            android:textSize="@dimen/basic_text_size" />
                    </LinearLayout>
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="@dimen/listTable_row_height">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="5dp"
                        android:fontFamily="@font/montserrat"
                        android:gravity="center_vertical"
                        android:text="Action"
                        android:textColor="@color/textColor"
                        android:textSize="@dimen/table_col_title"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="10dp"
                        android:layout_height="match_parent" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/text_action"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/montserrat_light"
                            android:gravity="center_vertical"
                            android:minHeight="@dimen/listTable_row_height"
                            android:text="Staked"
                            android:textColor="@color/textColor"
                            android:textSize="@dimen/basic_text_size" />
                    </LinearLayout>
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="@dimen/listTable_row_height">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="5dp"
                        android:fontFamily="@font/montserrat"
                        android:gravity="center_vertical"
                        android:text="Address"
                        android:textColor="@color/textColor"
                        android:textSize="@dimen/table_col_title"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="10dp"
                        android:layout_height="match_parent" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/text_address"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/montserrat_light"
                            android:gravity="center_vertical"
                            android:ellipsize="middle"
                            android:singleLine="true"
                            android:minHeight="@dimen/listTable_row_height"
                            android:text="0x123456789abfdfdsafdsafsdfsafdsfasdfsdafcdef"
                            android:textColor="@color/textColor"
                            android:textSize="@dimen/basic_text_size" />
                    </LinearLayout>
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="@dimen/listTable_row_height">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="5dp"
                        android:fontFamily="@font/montserrat"
                        android:gravity="center_vertical"
                        android:text="Amount"
                        android:textColor="@color/textColor"
                        android:textSize="@dimen/table_col_title"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="10dp"
                        android:layout_height="match_parent" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/text_amounts"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/montserrat_light"
                            android:gravity="center_vertical"
                            android:minHeight="@dimen/listTable_row_height"
                            android:text="524,300 ORBS"
                            android:textColor="@color/textColor"
                            android:textSize="@dimen/basic_text_size" />
                    </LinearLayout>
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="@dimen/listTable_row_height">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="5dp"
                        android:fontFamily="@font/montserrat"
                        android:gravity="center_vertical"
                        android:text="TxID"
                        android:textColor="@color/textColor"
                        android:textSize="@dimen/table_col_title"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="10dp"
                        android:layout_height="match_parent" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/text_txid"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/montserrat_light"
                            android:gravity="center_vertical"
                            android:ellipsize="middle"
                            android:singleLine="true"
                            android:minHeight="@dimen/listTable_row_height"
                            android:text="0xab12cd345678...94564321321efgEa"
                            android:textColor="@color/textColor"
                            android:textSize="@dimen/basic_text_size" />
                    </LinearLayout>
                </TableRow>
            </TableLayout>

        </LinearLayout>
    </LinearLayout>